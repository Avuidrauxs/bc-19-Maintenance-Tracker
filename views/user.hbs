    $.getJSON('assets/requests.json', function(data) {
      var items = [];
      $.each(data, function(key, val) {
        items.push("<tr>");
        items.push("<td id=" + key + ">" + val.title + "</td>");
        items.push("<td id=" + key + ">" + val.date + "</td>");
        items.push("<td id=" + key + ">" + val.id + "</td>");
        items.push("<td id=" + key + ">" + val.active + "</td>");
        items.push("<td id=" + key + ">" + val.imgURL + "</td>");
        items.push("<td id=" + key + ">" + val.repairer_name + "</td>");
        items.push("<td id=" + key + ">" + val.type + "</td>");
        items.push("<td id=" + key + ">" + val.priorty + "</td>");
        //items.push("<td><button type='button' class='btn btn-primary'>Approve</button>&nbsp;<button type=button class='btn btn-danger'>Reject</button></td>");
        items.push("<td id="+key+">"+val.comments+ "</td>");
        items.push("</tr>");
      });
      $('<tbody/>', {
        html: items.join("")
      }).appendTo("table")
    })
  </script>

  <script>
    function showForm() {
      var x = document.getElementById('notificat');

      x.style.display = 'block';
      var p = document.getElementById('notificat');
      var sum = p.innerHTML;
      p.innerHTML = ++sum;

    }

    function dispTable() {

      var x = document.getElementById('dispTable');
      var y = document.getElementById('mainDetails');
      var z = document.getElementById('repairDetails');
      if (x.style.display === 'none') {
        x.style.display = 'block';
        y.innerHTML = "Hide Details"
        z.innerHTML = "Hide Details"
      } else {
        x.style.display = 'none';
        y.innerHTML = "View Details"
        z.innerHTML = "Hide Details"
      }

    }

    function decreasePending() {
      var p = document.getElementById('pending_total');
      var sum = p.innerHTML;
      if (sum > 0) {
        p.innerHTML = --sum;
        showForm();
        increaseMaintenance();
      }

    }

    function increaseMaintenance() {
      var p = document.getElementById('maintenance_total');
      var sum = p.innerHTML;
      p.innerHTML = ++sum;
    }
  </script>

