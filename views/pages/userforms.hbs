        <div class="row">
          <div class="col-sm-12" id="createRequest" {{main_form_visibility}}>
            <div class="panel panel-default">
              <div class="panel-heading">
                Create New Request
              </div>
              <div class="panel-body">
                <div class="row">
                  <!--I'M A BANANA -->
                  <div class="col-lg-12">
                    <form role="form" action="/banana" method="POST">
                      <div class="form-group">
                        <label>ID #</label>
                        <input class="form-control" placeholder="Enter Title" name="reqID" type="number" maxlength="4" size="4">
                        <p class="help-block">Example 0001.</p>
                      </div>
                      <div class="form-group">
                        <label>Title</label>
                        <input class="form-control" placeholder="Enter Title" name="reqTitle">
                        <p class="help-block">Example "John Dogo".</p>
                      </div>
                      <div class="form-group">
                        <div class='input-group date' id='datetimepicker5'>
                          <input type='text' class="form-control" name="reqDate" placeholder="MM/DD/YYYY" />
                          <span class="input-group-addon">
                                                   <span class="glyphicon glyphicon-calendar"></span>
                          </span>
                        </div>
                      </div>
                  </div>
                  <script type="text/javascript">
                    $(function() {
                      $('#datetimepicker5').datetimepicker({
                        defaultDate: "11/1/2013",
                        disabledDates: [
                          moment("12/25/2013"),
                          new Date(2013, 11 - 1, 21),
                          "11/22/2013 00:53"
                        ]
                      });
                    });
                  </script>
                </div>
                <div class="form-group">
                  <label>Static Control</label>
                  <p class="form-control-static">email@example.com</p>
                </div>
                <div class="form-group">
                  <label>Upload Image</label>
                  <input type="file" name="reqimgURL">
                </div>
                <div class="form-group">
                  <label>Comments</label>
                  <textarea class="form-control" rows="3" name="reqComment"></textarea>
                </div>

                <div class="form-group">
                  <label>Priorty</label>
                  <label class="radio-inline">
                    <input type="radio" name="reqPriorty" id="reqPriorty" value="high" checked>High
                  </label>
                  <label class="radio-inline">
                    <input type="radio" name="reqPriorty" id="reqPriorty" value="normal">Normal
                  </label>
                  <label class="radio-inline">
                    <input type="radio" name="reqPriorty" id="reqPriorty" value="low">Low
                  </label>
                </div>
                <div class="form-group">
                  <label>Select Repair Staff</label>
                  <select class="form-control" id="staffSelect" onclick="loadStaff()">
                    <option id="reqStaff">&nbsp;</option>

                  </select>
                </div>
                <div class="form-group">
                  <label>Type of request</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <label class="radio-inline">
                    <input type="radio" name="reqType" id="reqType" value="maintenance" checked>Maintenance
                  </label>
                  <label class="radio-inline">
                    <input type="radio" name="reqType" id="reqType" value="request">Request
                  </label>

                </div>

              </div>

              <button type="submit" class="btn btn-default">Submit Button</button>
              <button type="reset" class="btn btn-default">Reset Button</button>
              </form>
            </div>
          </div>
          <!-- /.row (nested) -->
        </div>

        <div class="row">

          <div class="col-sm-12" id="createUser" {{form_visibility}}>
            <div class="panel panel-default">
              <div class="panel-heading">
                Create New User
              </div>
              <div class="panel-body">
                <div class="row">
                  <!--I'M A BANANA -->
                  <div class="col-lg-12">
                    <form role="form" action="/welcome" method="POST">
                      <div class="form-group">
                        <label>Firstname</label>
                        <input class="form-control" name="fname" placeholder="Enter First name">
                        <p class="help-block">Example "John"</p>
                      </div>
                      <div class="form-group">
                        <label>Lastname</label>
                        <input class="form-control" name="lname" placeholder="Enter last name">
                      </div>
                      <div class="form-group">
                        <label>Username</label>
                        <input class="form-control" name="uname" placeholder="Enter last name">
                      </div>
                      <div class="form-group">
                        <label>Phone Number</label>
                        <input class="form-control" name="phone" placeholder="Enter last name">
                      </div>
                      <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" type="email" name="email" placeholder="Enter last name">
                      </div>

                      <div class="form-group">
                        <label>Availability</label>
                        <label class="radio-inline">
                          <input type="radio" name="presence" id="presence" value=true checked>Yes
                        </label>
                        <label class="radio-inline">
                          <input type="radio" name="presence" id="presence" value=false>No
                        </label>

                      </div>

                      <div class="form-group">
                        <label>Role</label>
                        <label class="radio-inline">
                          <input type="radio" name="role" id="role" value="admin" checked>Admin
                        </label>
                        <label class="radio-inline">
                          <input type="radio" name="role" id="role" value="staff">Repair Staff
                        </label>

                      </div>

                      <button type="submit" class="btn btn-default">Submit Button</button>
                      <button type="reset" class="btn btn-default">Reset Button</button>
                    </form>
                  </div>
                </div>
                <!-- /.row (nested) -->
              </div>
              <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
          </div>


        </div>
