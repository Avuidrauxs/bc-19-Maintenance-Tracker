  <script>
    function loadStaff() {
      $.getJSON('assets/staff_raw.json', function(data) {
        //var items = [];
        var sel = document.getElementById('staffSelect');
        for (staff in data) {
          var opt = document.createElement('option');
          opt.value = data[staff].staff.username.toString();
          opt.name = data[staff].staff.username.toString();
          //alert(data[staff].staff.username)
          sel.appendChild(opt);
        }
      });

    }
  </script>

